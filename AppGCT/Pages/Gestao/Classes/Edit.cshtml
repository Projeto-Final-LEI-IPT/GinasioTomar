@page
@model AppGCT.Pages.Gestao.Classes.EditModel

@{
    ViewData["Title"] = "Editar Classe";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Editar Classe</h1>
<hr />
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Classes/Index'>Voltar</a>
</div>
<br>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Classe.IdClasse" />
            <div class="form-group">
                <label asp-for="Classe.NomeClasse" class="control-label"></label>
                <input asp-for="Classe.NomeClasse" class="form-control" />
                <span asp-validation-for="Classe.NomeClasse" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Classe.EstadoClasse" class="control-label">Género</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Classe.EstadoClasse" class="form-check-input" value="A" />
                        Ativa
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Classe.EstadoClasse" class="form-check-input" value="I" />
                        Inativa
                    </label>
                </div>
                <span asp-validation-for="Classe.EstadoClasse" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Classe.DataCriacao" />
            <input type="hidden" asp-for="Classe.IdCriacao" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
