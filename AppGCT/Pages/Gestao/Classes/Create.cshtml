@page
@model AppGCT.Pages.Gestao.Classes.CreateModel

@{
    ViewData["Title"] = "Criar Classe";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Criar Classe</h1>
<hr />
<div>
    <a title="Voltar" class='btn btn-success' asp-area='' asp-page='/Gestao/Classes/Index'>
        <span class="btn-svg-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </span>
    </a>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Classe.NomeClasse" class="control-label"></label>
                <input asp-for="Classe.NomeClasse" class="form-control" />
                <span asp-validation-for="Classe.NomeClasse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classe.EstadoClasse" class="control-label">Estado Classe</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Classe.EstadoClasse" class="form-check-input" value="A" checked />
                        Ativa
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Classe.EstadoClasse" class="form-check-input" value="I"/>
                        Inativa
                    </label>
                </div>
                <span asp-validation-for="Classe.EstadoClasse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
