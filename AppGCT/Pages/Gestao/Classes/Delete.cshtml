@page
@model AppGCT.Pages.Gestao.Classes.DeleteModel

@{
    ViewData["Title"] = "Apagar Classe";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Apagar Classe</h1>
<h3>Pretende mesmo apagar a Classe?</h3>
<hr />
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Classes/Index'>Voltar</a>
</div>
<br>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.NomeClasse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classe.NomeClasse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.EstadoClasse)
        </dt>
        <dd class="col-sm-10">
            @Html.RadioButtonFor(model => model.Classe.EstadoClasse, "A", new { @disabled = "disabled" }) Ativa
            @Html.RadioButtonFor(model => model.Classe.EstadoClasse, "I", new { @disabled = "disabled" }) Inativa
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.DataCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classe.DataCriacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.IdCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classe.IdCriacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.DataModificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classe.DataModificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.IdModificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classe.IdModificacao)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Classe.IdClasse" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
