@page
@model AppGCT.Pages.Gestao.Classes.DeleteModel

@{
    ViewData["Title"] = "Apagar Classe";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Apagar Classe</h1>
<h3>Pretende mesmo apagar a Classe?</h3>
<hr />
<div>
    <a class='btn btn-success' asp-area='' asp-page='/Gestao/Classes/Index'>
        <span class="btn-svg-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </span>
    </a>
</div>
<br>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.NomeClasse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classe.NomeClasse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.EstadoClasse)
        </dt>
        <dd class="col-sm-10">
            @Html.RadioButtonFor(model => model.Classe.EstadoClasse, "A", new { @disabled = "disabled" }) Ativa
            @Html.RadioButtonFor(model => model.Classe.EstadoClasse, "I", new { @disabled = "disabled" }) Inativa
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.DataCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classe.DataCriacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.IdCriacao)
        </dt>
        <dd class="col-sm-10">
            @Model.IdCriacaoName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.DataModificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classe.DataModificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.IdModificacao)
        </dt>
        <dd class="col-sm-10">
            @Model.IdModificacaoName
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Classe.IdClasse" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
