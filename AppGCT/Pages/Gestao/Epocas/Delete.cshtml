@page
@model AppGCT.Pages.Ginasio.Epocas.DeleteModel

@{
    ViewData["Title"] = "Apagar Época Desportiva";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Apagar Época Desportiva</h1>
<h3>Pretende mesmo apagar a época desportiva?</h3>
<hr />
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Epocas/Index'>Voltar</a>
</div>
<br>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epoca.NomeEpoca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Epoca.NomeEpoca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epoca.DataInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Epoca.DataInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epoca.DataFim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Epoca.DataFim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epoca.EstadoEpoca)
        </dt>
        <dd class="col-sm-10">
            @Html.RadioButtonFor(model => model.Epoca.EstadoEpoca, "A", new { @disabled = "disabled" }) Ativa
            @Html.RadioButtonFor(model => model.Epoca.EstadoEpoca, "C", new { @disabled = "disabled" }) Cancelada
            @Html.RadioButtonFor(model => model.Epoca.EstadoEpoca, "F", new { @disabled = "disabled" }) Finalizada
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epoca.DataCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Epoca.DataCriacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epoca.IdCriacao)
        </dt>
        <dd class="col-sm-10">
            @Model.IdCriacaoName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epoca.DataModificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Epoca.DataModificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epoca.IdModificacao)
        </dt>
        <dd class="col-sm-10">
            @Model.IdModificacaoName
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Epoca.IdEpoca" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
