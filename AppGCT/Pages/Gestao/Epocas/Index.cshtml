@page
@model AppGCT.Pages.Ginasio.Epocas.IndexModel

@{
    ViewData["Title"] = "Épocas Desportivas";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Gestão Épocas Desportivas</h1>

<p>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Epocas/Create'>Nova Época</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Época
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Procurar" class="btn btn-primary btn-sm" />
            <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Epocas/Index'>Limpar</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.EpocaSort">
                    Época
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DataInicioSort">
                    Data Início
                </a> 
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DataFimSort">
                    Data Fim
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.EstadoEpocaSort">
                    Estado Época
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Epoca) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEpoca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusDescription)
            </td>
            <td>
                <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Epocas/Edit' asp-route-id='@item.IdEpoca'>Editar</a>
                <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Epocas/Details' asp-route-id='@item.IdEpoca'>Detalhes</a>
                <a class='btn btn-danger btn-sm' asp-area='' asp-page='/Gestao/Epocas/Delete' asp-route-id='@item.IdEpoca'>Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
