@page
@model AppGCT.Pages.Ginasio.Epocas.CreateModel

@{
    ViewData["Title"] = "Criar Época Desportiva";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    
}

<h1>Criar Época Desportiva</h1>

<hr />
<div>
    <a class='btn btn-success' asp-area='' asp-page='/Gestao/Epocas/Index'>
        <span class="btn-svg-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </span>
    </a>
</div>
<br>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Epoca.NomeEpoca" class="control-label">Época</label>
                <input asp-for="Epoca.NomeEpoca" class="form-control" />
                <span asp-validation-for="Epoca.NomeEpoca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Epoca.DataInicio" class="control-label">Data Inicio</label>
                <input asp-for="Epoca.DataInicio" class="form-control"/>
                <span asp-validation-for="Epoca.DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Epoca.DataFim" class="control-label">Data Fim</label>
                <input asp-for="Epoca.DataFim" class="form-control" />
                <span asp-validation-for="Epoca.DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
