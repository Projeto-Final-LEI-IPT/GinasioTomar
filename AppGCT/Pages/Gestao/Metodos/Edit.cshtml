@page
@model AppGCT.Pages.Gestao.Metodos.EditModel

@{
    ViewData["Title"] = "Editar Método Pagamento";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Editar Método Pagamento</h1>
<hr />
<div>
    <a title="Voltar" class='btn btn-success' asp-area='' asp-page='/Gestao/Metodos/Index'>
        <span class="btn-svg-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </span>
    </a>
</div>
<br>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MetodoPagamento.CodMetodo" />
            <div class="form-group">
                <label asp-for="MetodoPagamento.DescMetodo" class="control-label"></label>
                <input asp-for="MetodoPagamento.DescMetodo" class="form-control" />
                <span asp-validation-for="MetodoPagamento.DescMetodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetodoPagamento.ValorDesconto" class="control-label"></label>
                <input type="number" asp-for="MetodoPagamento.ValorDesconto" class="form-control" onkeydown="return event.keyCode !== 69 && event.keyCode !== 189" />
                <span asp-validation-for="MetodoPagamento.ValorDesconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetodoPagamento.EstadoMetodo" class="control-label">Estado Método Pagamento</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="MetodoPagamento.EstadoMetodo" class="form-check-input" value="A" />
                        Ativo
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="MetodoPagamento.EstadoMetodo" class="form-check-input" value="I" />
                        Inativo
                    </label>
                </div>
                <span asp-validation-for="MetodoPagamento.EstadoMetodo" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="MetodoPagamento.DataCriacao" />
            <input type="hidden" asp-for="MetodoPagamento.IdCriacao" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
