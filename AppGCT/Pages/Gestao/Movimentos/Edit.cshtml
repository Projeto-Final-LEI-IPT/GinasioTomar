@page
@model AppGCT.Pages.Gestao.Movimentos.EditModel

@{
    ViewData["Title"] = "Editar Movimento";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Editar Movimento</h1>

<hr />
<div>
    <a title="Voltar" class='btn btn-success' asp-area='' asp-page='/Gestao/Movimentos/Index'>
        <span class="btn-svg-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </span>
    </a>
</div>
<br>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movimento.Id" />
            <div class="form-group">
                <label asp-for="Movimento.DesRubrica" class="control-label"></label>
                <input asp-for="Movimento.DesRubrica" class="form-control" disabled />
                <span asp-validation-for="Movimento.DesRubrica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movimento.DtMovimento" class="control-label"></label>
                <input asp-for="Movimento.DtMovimento" class="form-control" />
                <span asp-validation-for="Movimento.DtMovimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movimento.ValorMovimento" class="control-label"></label>
                <input asp-for="Movimento.ValorMovimento" class="form-control" disabled />
                <span asp-validation-for="Movimento.ValorMovimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movimento.ValorDesconto" class="control-label"></label>
                <input asp-for="Movimento.ValorDesconto" class="form-control" disabled />
                <span asp-validation-for="Movimento.ValorDesconto" class="text-danger"></span>
            </div>
            @if (@ViewBag.TipoRubrica == "P")
            {
                <div class="form-group">
                    <label asp-for="Movimento.NumFatura" class="control-label"></label>
                    <input asp-for="Movimento.NumFatura" class="form-control" />
                    <span asp-validation-for="Movimento.NumFatura" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Movimento.NumNotaCredito" />
            }
            @if (@ViewBag.TipoRubrica == "D")
            {

                <input type="hidden" asp-for="Movimento.NumFatura" />
                <div class="form-group">
                    <label asp-for="Movimento.NumNotaCredito" class="control-label"></label>
                    <input asp-for="Movimento.NumNotaCredito" class="form-control" />
                    <span asp-validation-for="Movimento.NumNotaCredito" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Movimento.MSaldo" class="control-label"></label>
                <input asp-for="Movimento.MSaldo" class="form-control" disabled />
                <span asp-validation-for="Movimento.MSaldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movimento.Observacoes" class="control-label"></label>
                <input asp-for="Movimento.Observacoes" class="form-control" disabled />
                <span asp-validation-for="Movimento.Observacoes" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Movimento.DataCriacao" />
            <input type="hidden" asp-for="Movimento.IdCriacao" />
            <div class="form-group">
                <label asp-for="Movimento.Socio" class="control-label"></label>
                <select asp-for="Movimento.UtilizadorId" class="form-control" asp-items="ViewBag.UtilizadorId" ></select>
                <span asp-validation-for="Movimento.UtilizadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movimento.Atleta" class="control-label"></label>
                <select asp-for="Movimento.AtletaMovimentoId" class="form-control" asp-items="ViewBag.AtletaMovimentoId" disabled ></select>
                <span asp-validation-for="Movimento.AtletaMovimentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movimento.TipoDespesa" class="control-label"></label>
                <select asp-for="Movimento.RubricaId" class="form-control" asp-items="ViewBag.RubricaId" ></select>
                <span asp-validation-for="Movimento.RubricaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movimento.FormaPagamento" class="control-label"></label>
                <select asp-for="Movimento.MetodoPagamentoId" class="form-control" asp-items="ViewBag.MetodoPagamentoId" disabled ></select>
                <span asp-validation-for="Movimento.MetodoPagamentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
