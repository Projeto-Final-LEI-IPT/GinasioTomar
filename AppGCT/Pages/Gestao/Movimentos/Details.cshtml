            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movimento.DataCriacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movimento.DataCriacao)
            </dd>
