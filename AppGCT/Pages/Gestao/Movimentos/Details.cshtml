            @Html.DisplayNameFor(model => model.Movimento.FormaPagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento.FormaPagamento.ID_DescrMetodo)
        </dd>
    </dl>
</div>
    @if (User.IsInRole("Administrador"))
    {
    <div>
        <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Movimentos/Edit' asp-route-id='@Model.Movimento?.Id'>Editar</a>
    </div>
}
