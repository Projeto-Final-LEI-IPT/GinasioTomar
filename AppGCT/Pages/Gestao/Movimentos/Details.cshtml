@model AppGCT.Pages.Gestao.Movimentos.DetailsModel

@{
    ViewData["Title"] = "Detalhes de Movimento";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Detalhes Movimento</h1>

<hr />
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Movimentos/Index'>Voltar</a>
</div>
<br>
<div>
    <dl class="row">
        @if (User.IsInRole("Administrador"))
        {
            <dt class="col-sm-2">
                Id Movimento
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movimento.Id)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movimento.DesRubrica)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento.DesRubrica)
        </dd>
