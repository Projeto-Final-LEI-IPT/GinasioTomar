                @Html.DisplayNameFor(model => model.Movimento.IdCriacao)
            </dt>
            <dd class="col-sm-10">
                @Model.IdCriacaoName
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movimento.DataModificacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movimento.DataModificacao)
            </dd>
