            @Html.DisplayNameFor(model => model.Movimento.DtMovimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento.DtMovimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movimento.ValorMovimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento.ValorMovimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movimento.ValorDesconto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento.ValorDesconto)
        </dd>
