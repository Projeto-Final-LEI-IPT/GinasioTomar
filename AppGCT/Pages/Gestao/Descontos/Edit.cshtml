@page
@model AppGCT.Pages.Gestao.Descontos.EditModel

@{
    ViewData["Title"] = "Editar Descontos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Editar Descontos</h1>
<hr />
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Descontos/Index'>Voltar</a>
</div>
<br>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Desconto.CodDesconto" />
            <div class="form-group">
                <label asp-for="Desconto.DescDesconto" class="control-label"></label>
                <input asp-for="Desconto.DescDesconto" class="form-control" />
                <span asp-validation-for="Desconto.DescDesconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desconto.EstadoDesconto" class="control-label">Género</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Desconto.EstadoDesconto" class="form-check-input" value="A" />
                        Ativo
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Desconto.EstadoDesconto" class="form-check-input" value="I" />
                        Inativo
                    </label>
                </div>
                <span asp-validation-for="Desconto.EstadoDesconto" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Desconto.DataCriacao" />
            <input type="hidden" asp-for="Desconto.IdCriacao" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
