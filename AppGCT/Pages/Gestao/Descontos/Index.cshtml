@page
@model AppGCT.Pages.Gestao.Descontos.IndexModel

@{
    ViewData["Title"] = "Gestão Descontos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Gestão Descontos</h1>

<p>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Descontos/Create'>Novo Desconto</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Descrição Desconto
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Procurar" class="btn btn-primary btn-sm" />
            <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Descontos/Index'>Limpar</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.CodDescontoSort">
                    @Html.DisplayNameFor(model => model.Desconto[0].CodDesconto)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DescDescontoSort">
                    @Html.DisplayNameFor(model => model.Desconto[0].DescDesconto)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.EstadoDescontoSort">
                    @Html.DisplayNameFor(model => model.Desconto[0].EstadoDesconto)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Desconto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodDesconto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescDesconto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusDescription)
            </td>
            <td>
                    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Descontos/Edit' asp-route-id='@item.CodDesconto'>Editar</a>
                    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Descontos/Details' asp-route-id='@item.CodDesconto'>Detalhes</a>
                    <a class='btn btn-danger btn-sm' asp-area='' asp-page='/Gestao/Descontos/Delete' asp-route-id='@item.CodDesconto'>Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
