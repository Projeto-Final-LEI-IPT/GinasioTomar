@page
@model AppGCT.Pages.Gestao.Descontos.DetailsModel

@{
    ViewData["Title"] = "Detalhes Desconto";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Detalhes Desconto</h1>

<hr />
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Descontos/Index'>Voltar</a>
</div>
<br>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto.CodDesconto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desconto.CodDesconto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto.DescDesconto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desconto.DescDesconto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto.EstadoDesconto)
        </dt>
        <dd class="col-sm-10">
            @Html.RadioButtonFor(model => model.Desconto.EstadoDesconto, "A", new { @disabled = "disabled" }) Ativo
            @Html.RadioButtonFor(model => model.Desconto.EstadoDesconto, "I", new { @disabled = "disabled" }) Inativo
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto.DataCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desconto.DataCriacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto.IdCriacao)
        </dt>
        <dd class="col-sm-10">
            @Model.IdCriacaoName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto.DataModificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desconto.DataModificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto.IdModificacao)
        </dt>
        <dd class="col-sm-10">
            @Model.IdModificacaoName
        </dd>
    </dl>
</div>
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Descontos/Edit' asp-route-id='@Model.Desconto?.CodDesconto'>Editar</a>
</div>
