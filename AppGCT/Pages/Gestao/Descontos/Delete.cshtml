@model AppGCT.Pages.Gestao.Descontos.DeleteModel

@{
    ViewData["Title"] = "Apagar Desconto";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Apagar Desconto</h1>
<h3>Pretende mesmo apagar o desconto?</h3>
<hr />
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Descontos/Index'>Voltar</a>
</div>
<br>
<div>
     <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto.DescDesconto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desconto.DescDesconto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto.EstadoDesconto)
        </dt>
        <dd class="col-sm-10">
