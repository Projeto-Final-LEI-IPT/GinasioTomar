@page
@model AppGCT.Pages.Gestao.Utilizadores.CreateModel

@{
    ViewData["Title"] = "Criar Época Desportiva";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Criar Novo Utilizador</h1>

<hr />
<div>
    <a title="Voltar" class='btn btn-success' asp-area='' asp-page='/Gestao/Utilizadores/Index'>
        <span class="btn-svg-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </span>
    </a>
</div>
<br>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            
                    <div class="form-group">
                        <label for="Input_RoleId">Tipo Utilizador</label>
                        <select asp-for="Input.RoleName" asp-items="@(new SelectList(Model.Roles, "Name"))" class="form-control"></select>
                        <span asp-validation-for="Input.RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Nome">Nome Completo</label>
                        <input asp-for="Input.Nome" class="form-control" autocomplete="nome" aria-required="true"/>
                        <span asp-validation-for="Input.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NIF">Nº Identificação Fiscal(NIF)</label>
                        <input asp-for="Input.NIF" class="form-control" autocomplete="nif" aria-required="true" />
                        <span asp-validation-for="Input.NIF" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Dtnascim">Data Nascimento</label>
                        <input asp-for="Input.Dtnascim" class="form-control" autocomplete="off" aria-required="true" placeholder="dtnascim"/>
                        <span asp-validation-for="Input.Dtnascim" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Morada">Morada</label>
                        <input asp-for="Input.Morada" class="form-control" autocomplete="morada" aria-required="true"  />
                        <span asp-validation-for="Input.Morada" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.CodPostal">Código Postal</label>
                        <input asp-for="Input.CodPostal" class="form-control" autocomplete="codpostal" aria-required="true" />
                        <span asp-validation-for="Input.CodPostal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Contato">Contato</label>
                        <input asp-for="Input.Contato" class="form-control" autocomplete="contato" aria-required="true"  />
                        <span asp-validation-for="Input.Contato" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true"  />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Password</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"  />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword">Confirme Password</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"  />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-success" />
                    </div>
        </form>
    </div>
</div>