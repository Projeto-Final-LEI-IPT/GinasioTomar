@page
@model AppGCT.Pages.Gestao.Utilizadores.EditModel

@{
    ViewData["Title"] = "Atualizar Utilizador";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Atualizar Utilizador</h1>

<hr />
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/Utilizadores/Index'>Voltar</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />
            <input type="hidden" asp-for="Input.RoleName" />
            <div class="form-group">
                <label asp-for="Input.RoleName">Tipo Utilizador</label>
                <input asp-for="Input.RoleName" class="form-control" autocomplete="nome" aria-required="true" disabled="disabled"/>
                <span asp-validation-for="Input.RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nome">Nome Completo</label>
                <input asp-for="Input.Nome" class="form-control" autocomplete="nome" aria-required="true" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            @if (Model.Input.RoleName.Equals("Sócio"))
            {
                <div class="form-group">
                    <label asp-for="Input.NumSocio">Número Sócio</label>
                    <input asp-for="Input.NumSocio" class="form-control" autocomplete="numsocio" aria-required="true" />
                    <span asp-validation-for="Input.NumSocio" class="text-danger"></span>
                </div>
            }else
            {
                <input type="hidden" asp-for="Input.NumSocio" />
            }
            <div class="form-group">
                <label asp-for="Input.NIF">Nº Identificação Fiscal(NIF)</label>
                <input asp-for="Input.NIF" class="form-control" autocomplete="nif" aria-required="true" />
                <span asp-validation-for="Input.NIF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Dtnascim">Data Nascimento</label>
                <input asp-for="Input.Dtnascim" class="form-control" autocomplete="dtnascim" aria-required="true" placeholder="dtnascim" />
                <span asp-validation-for="Input.Dtnascim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Morada">Morada</label>
                <input asp-for="Input.Morada" class="form-control" autocomplete="morada" aria-required="true" />
                <span asp-validation-for="Input.Morada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Contato">Contato</label>
                <input asp-for="Input.Contato" class="form-control" autocomplete="contato" aria-required="true" />
                <span asp-validation-for="Input.Contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Estado" class="control-label">Estado Utilizador</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Input.Estado" class="form-check-input" value="A" />
                        Ativo
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Input.Estado" class="form-check-input" value="I" />
                        Inativo
                    </label>
                </div>
                <span asp-validation-for="Input.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
