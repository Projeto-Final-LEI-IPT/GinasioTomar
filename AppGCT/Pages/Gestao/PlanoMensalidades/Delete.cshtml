@page
@model AppGCT.Pages.Inscricoes.PlanoMensalidades.DeleteModel

@{
    ViewData["Title"] = "Apagar Plano";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Apagar Plano</h1>
<h3>Pretende mesmo apagar o Plano?</h3>
<hr />
<div>
    <a title="Voltar" class='btn btn-success' asp-area='' asp-page='/Gestao/PlanoMensalidades/Index'>
        <span class="btn-svg-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </span>
    </a>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.DataMensalidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanoMensalidade.DataMensalidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.ValorMensalidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanoMensalidade.ValorMensalidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.ILancado)
        </dt>
        <dd class="col-sm-10">
            @Html.RadioButtonFor(model => model.PlanoMensalidade.ILancado, "S", new { @disabled = "disabled" }) Sim
            @Html.RadioButtonFor(model => model.PlanoMensalidade.ILancado, "N", new { @disabled = "disabled" }) Não
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.ValorMensalidadeLanc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanoMensalidade.ValorMensalidadeLanc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.IdMovimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanoMensalidade.IdMovimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.Epoca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanoMensalidade.Epoca.NomeEpoca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.Aluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanoMensalidade.Aluno.ID_DescrGinasta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.DataCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanoMensalidade.DataCriacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.IdCriacao)
        </dt>
        <dd class="col-sm-10">
            @Model.IdCriacaoName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.DataModificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanoMensalidade.DataModificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanoMensalidade.IdModificacao)
        </dt>
        <dd class="col-sm-10">
            @Model.IdModificacaoName
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="PlanoMensalidade.IdPlanoM" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
    </form>
</div>
