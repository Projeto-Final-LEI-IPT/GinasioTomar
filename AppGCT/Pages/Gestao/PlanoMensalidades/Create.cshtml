@page
@model AppGCT.Pages.Inscricoes.PlanoMensalidades.CreateModel

@{
    ViewData["Title"] = "Criar Plano";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .validation-error {
        color: red;
    }
</style>

<h1>Criar Plano</h1>
<hr />
<div>
    <a title="Voltar" class='btn btn-success' asp-area='' asp-page='/Gestao/PlanoMensalidades/Index'>
        <span class="btn-svg-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.DataMensalidade" class="control-label"></label>
                <input asp-for="PlanoMensalidade.DataMensalidade" class="form-control" />
                <span asp-validation-for="PlanoMensalidade.DataMensalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.ValorMensalidade" class="control-label"></label>
                <input type="number" asp-for="PlanoMensalidade.ValorMensalidade" class="form-control" />
                <span asp-validation-for="PlanoMensalidade.ValorMensalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.ILancado" class="control-label">Lançado?</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="PlanoMensalidade.ILancado" class="form-check-input" value="S" />
                        Sim
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="PlanoMensalidade.ILancado" class="form-check-input" value="N" checked />
                        Não
                    </label>
                </div>
                <span asp-validation-for="PlanoMensalidade.ILancado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.ValorMensalidadeLanc" class="control-label"></label>
                <input type="number" asp-for="PlanoMensalidade.ValorMensalidadeLanc" class="form-control" />
                <span asp-validation-for="PlanoMensalidade.ValorMensalidadeLanc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.IdMovimento" class="control-label"></label>
                <input asp-for="PlanoMensalidade.IdMovimento" class="form-control" />
                <span asp-validation-for="PlanoMensalidade.IdMovimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.EpocaId" class="control-label">Época</label>
                <select asp-for="PlanoMensalidade.EpocaId" class ="form-control" asp-items="ViewBag.EpocaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.GinastaId" class="control-label">Ginasta</label>
                <select asp-for="PlanoMensalidade.GinastaId" class ="form-control" asp-items="ViewBag.GinastaId"></select>
                @Html.ValidationMessageFor(model => model.PlanoMensalidade.GinastaId, null, new { @class = "validation-error" })
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
