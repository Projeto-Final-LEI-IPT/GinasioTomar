@page
@model AppGCT.Pages.Inscricoes.PlanoMensalidades.CreateModel

@{
    ViewData["Title"] = "Criar Plano";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .validation-error {
        color: red;
    }
</style>

<h1>Criar Plano</h1>
<hr />
<div>
    <a class='btn btn-primary btn-sm' asp-area='' asp-page='/Gestao/PlanoMensalidades/Index'>Voltar</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.DataMensalidade" class="control-label"></label>
                <input asp-for="PlanoMensalidade.DataMensalidade" class="form-control" />
                <span asp-validation-for="PlanoMensalidade.DataMensalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.ValorMensalidade" class="control-label"></label>
                <input type="number" asp-for="PlanoMensalidade.ValorMensalidade" class="form-control" />
                <span asp-validation-for="PlanoMensalidade.ValorMensalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.EpocaId" class="control-label">Época</label>
                <select asp-for="PlanoMensalidade.EpocaId" class ="form-control" asp-items="ViewBag.EpocaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlanoMensalidade.GinastaId" class="control-label">Ginasta</label>
                <select asp-for="PlanoMensalidade.GinastaId" class ="form-control" asp-items="ViewBag.GinastaId"></select>
                @Html.ValidationMessageFor(model => model.PlanoMensalidade.GinastaId, null, new { @class = "validation-error" })
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
