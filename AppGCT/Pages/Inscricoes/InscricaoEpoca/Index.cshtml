@page
@model AppGCT.Pages.Inscricoes.InscricaoEpoca.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Gestão das Inscrições de Ginastas em Épocas Desportivas</h1>

<div>
    <hr />
    <h4>Detalhe do Ginasta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.NomeCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.NomeCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.DtNascim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.DtNascim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.EstadoGinasta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.EstadoGinasta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.Socio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.Socio.NumSocio)
        </dd>
    </dl>
</div>
<div>
    <a class='btn btn-primary btn-sm' href='/Inscricoes/InscricaoEpoca/Create?id=@Model.Ginasta.Id'>Nova Inscrição</a>
    <a class='btn btn-primary btn-sm' href='/Inscricoes/Ginastas'>Voltar</a>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inscricao[0].IdFGP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inscricao[0].ISocGinasta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inscricao[0].DtInscricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inscricao[0].IExamMed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inscricao[0].DtExamMed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inscricao[0].IPagamInscricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Inscricao) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdFGP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISocGinasta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtInscricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IExamMed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtExamMed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IPagamInscricao)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" href="/Inscricoes/InscricaoEpoca/Edit?id=@item.Id">Editar</a>
                <a class="btn btn-primary btn-sm" href="/Inscricoes/InscricaoEpoca/Details?id=@item.Id">Detalhes</a>
                <a class="btn btn-danger  btn-sm" href="/Inscricoes/InscricaoEpoca/Delete?id=@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
