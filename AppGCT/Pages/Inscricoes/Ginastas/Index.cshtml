@page
@model AppGCT.Pages.Inscricoes.Ginastas.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Gestão Ginastas</h1>
<hr />
<p>
    <a class='btn btn-primary btn-sm' href='/Inscricoes/Ginastas/Create'>Novo Ginasta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ginasta[0].NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ginasta[0].DtNascim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ginasta[0].EstadoGinasta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ginasta[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ginasta[0].Socio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ginasta) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtNascim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoGinasta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Socio.NumSocio)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" href="/Inscricoes/Ginastas/Edit?id=@item.Id">Editar</a>
                <a class="btn btn-primary btn-sm" href="/Inscricoes/Ginastas/Details?id=@item.Id">Detalhes</a>
            @if (User.IsInRole("Administrador") || User.IsInRole("Ginásio"))
            {
                <a class="btn btn-danger  btn-sm" href="/Inscricoes/Ginastas/Delete?id=@item.Id">Apagar</a>
            }
                <a class="btn btn-primary btn-sm" href="/Inscricoes/InscricaoEpoca/Index?id=@item.Id">Inscrições</a>
            </td>
        </tr>
}
    </tbody>
</table>
