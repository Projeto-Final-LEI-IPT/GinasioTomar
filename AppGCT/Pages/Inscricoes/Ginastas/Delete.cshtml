        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.Socio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.Socio.ID_Description)
        </dd>
    </dl>

<form method="post">
        <input type="hidden" asp-for="Ginasta.Id" />
        <input type="submit" value="Apagar" class="btn btn-danger btn-sm" />
        <a class='btn btn-primary btn-sm' href='/Inscricoes/Ginastas/Index'>Voltar</a>
    </form>
