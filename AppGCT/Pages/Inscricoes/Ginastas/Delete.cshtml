        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.EmailTlmEmerEE)
        </dd>
        @if (User.IsInRole("Administrador") || User.IsInRole("Ginásio"))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ginasta.DataCriacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ginasta.DataCriacao)
            </dd>
