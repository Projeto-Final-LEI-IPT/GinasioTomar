@page
@model AppGCT.Pages.Inscricoes.Ginastas.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>Pretende mesmo apagar o Ginasta?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fotografia
        </dt>
        <dd class="col-sm-10">
            @if (Model.Ginasta.Foto != null)
            {
                <img class="photo" src="data:image/png;base64,@Convert.ToBase64String(Model.Ginasta.Foto)" alt="Ginasta Foto" />
            }
            else
            {
                <p>Sem Fotografia</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.NomeCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.NomeCompleto)
        </dd>
        <dt class="col-sm-2">
            Género
        </dt>
        <dd class="col-sm-10">
            @Html.RadioButtonFor(model => model.Ginasta.ISexo, "M", new { @disabled = "disabled" }) Masculino
            @Html.RadioButtonFor(model => model.Ginasta.ISexo, "F", new { @disabled = "disabled" }) Feminino
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.DtNascim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.DtNascim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.EstadoGinasta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.StatusDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.NumCC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.NumCC)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.NIF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.NIF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.NISS)
        </dt>
        <dd class="col-sm-10">
