        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.CodPostal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.CodPostal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ginasta.Localidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ginasta.Localidade)
        </dd>
        <dt class="col-sm-2">
            Candidata-se a Bolsa Formação Desportiva?
        </dt>
        <dd class="col-sm-10">
            @Html.RadioButtonFor(model => model.Ginasta.IBolsa, "S", new { @disabled = "disabled" }) Sim
            @Html.RadioButtonFor(model => model.Ginasta.IBolsa, "N", new { @disabled = "disabled" }) Não
        </dd>
        <dt class="col-sm-2">
            Tem irmãos no GCT?
