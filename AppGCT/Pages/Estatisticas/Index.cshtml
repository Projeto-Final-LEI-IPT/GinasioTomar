@page
@model AppGCT.Pages.Estatisticas.IndexModel
@{
    ViewData["Title"] = "Estatísticas";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Utilizadores do Sistema</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Tipo Utilizador
            </th>
            <th>
                Ativos
            </th>
            <th>
                Inativos
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.utilizadores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleAux)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountACT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountINA)
                </td>
            </tr>
        }
    </tbody>
</table>
<br/>

<h1>Ginastas</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Ativos
            </th>
            <th>
                Inativos
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.ginastas[0].CountGinACT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ginastas[0].CountGinINA)
            </td>
        </tr>
    </tbody>
</table>
<br />
<h1>Inscrições por Época(Totais)</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Época
            </th>
            <th>
                Nº Inscrições
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.inscricoes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeEpoca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountInscricoes)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<h1>Inscrições por Época(detalhe)</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Época
            </th>
            <th>
                Classe
            </th>
            <th>
                Nº Inscrições
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.inscricoesdet)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeEpoca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeClasse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountInscricoes)
                </td>
            </tr>
        }
    </tbody>
</table>