<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ginásio Clube de Tomar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppGCT.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">GCT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Página Principal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Precario/Index">Preçário</a>
                        </li>
                        @if (User.IsInRole("Sócio"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Inscricoes/Ginastas/Index">Ginastas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Gestao/Movimentos/Index">Conta Corrente</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrador") || User.IsInRole("Ginásio"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="gestaoDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Painel Gestão</a>
                                <div class="dropdown-menu" aria-labelledby="gestaoDropdown">
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/Epocas/Index">Épocas Desportivas</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/Classes/Index">Classes</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/Metodos/Index">Métodos de Pagamento</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/Descontos/Index">Descontos</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/RubricasPrecario/Index">Rúbricas Preçário</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/Movimentos/Index">Movimentos</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Inscricoes/Ginastas/Index">Ginastas</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/Utilizadores/Index">Utilizadores</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/PlanoMensalidades/Index">Plano Mensalidades</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/Tarefas/Index">Tarefas</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Gestao/CobrancaMensalidades/Index">Cobrança Mensalidades</a>
                                    }
                                    else 
                                      if (User.IsInRole("Ginásio"))
                                        {
                                            <a class="dropdown-item" asp-area="" asp-page="/Gestao/Movimentos/Index">Movimentos</a>
                                            <a class="dropdown-item" asp-area="" asp-page="/Inscricoes/Ginastas/Index">Ginastas</a>
                                            <a class="dropdown-item" asp-area="" asp-page="/Gestao/Utilizadores/Index">Utilizadores</a>
                                            <a class="dropdown-item" asp-area="" asp-page="/Gestao/PlanoMensalidades/Index">Plano Mensalidades</a>
                                        }
    
                                </div>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Ginásio Clube de Tomar - <a asp-area="" asp-page="/Privacy">Privacidade</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>