@using Microsoft.AspNetCore.Identity
@using AppGCT.Areas.Identity.Data

@inject SignInManager<Utilizador> SignInManager
@inject UserManager<Utilizador> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item items">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Ver Perfil">Bem-vindo @((await UserManager.GetUserAsync(User)).Nome)!</a>
    </li>
    <li class="nav-item items">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" title="Terminar Sessão" type="submit" class="nav-link btn btn-link text-success border-0 custom-logout-button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                    </svg>
                </button>
        </form>
    </li>
}
else
{
    <li class="nav-item items">
        <a class="nav-link " id="register" asp-area="Identity" asp-page="/Account/Register">Registo</a>
    </li>
    <li class="nav-item items">
        <a class="nav-link " id="login" asp-area="Identity" asp-page="/Account/Login">Iniciar Sessão</a>
    </li>
}
</ul>
